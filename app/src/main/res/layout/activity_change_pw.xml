<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/change_pw_et_pw"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:textSize="18dp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:lines="1"
        android:background="@drawable/stroke_sign_gray"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/change_pw_et_checkpw"
        android:layout_below="@id/change_pw_et_pw"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:hint="비밀번호 재확인"
        android:textSize="18dp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:lines="1"
        android:background="@drawable/stroke_sign_gray"
        android:padding="15dp"/>


    <Button
        android:id="@+id/change_pw_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_pw_et_checkpw"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:text="비밀번호 변경하기"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@drawable/bt_click_orange"/>



</RelativeLayout>