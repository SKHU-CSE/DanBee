<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/findpw_user_et_id"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디"
        android:textSize="18sp"
        android:textColor="#000000"
        android:inputType="text"
        android:lines="1"
        android:background="@drawable/stroke_sign_gray"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/findpw_user_et_name"
        android:layout_below="@id/findpw_user_et_id"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름"
        android:textSize="18sp"
        android:textColor="#000000"
        android:inputType="text"
        android:lines="1"
        android:background="@drawable/stroke_sign_gray"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/findpw_user_et_birth"
        android:layout_below="@id/findpw_user_et_name"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="생년월일    ex)961225"
        android:textSize="18sp"
        android:textColor="#000000"
        android:inputType="number"
        android:lines="1"
        android:background="@drawable/stroke_sign_gray"
        android:padding="15dp"/>



    <EditText
        android:id="@+id/findpw_user_et_phone"
        android:layout_below="@id/findpw_user_et_birth"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="전화번호"
        android:textSize="18sp"
        android:textColor="#000000"
        android:inputType="number"
        android:lines="1"
        android:background="@drawable/stroke_sign_gray"
        android:padding="15dp"/>


    <Button
        android:id="@+id/findpw_user_bt_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/findpw_user_et_phone"
        android:layout_marginTop="30dp"
        android:text="비밀번호 찾기"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@drawable/bt_click_orange"/>

</RelativeLayout>