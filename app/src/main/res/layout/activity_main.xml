<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:elevation="1dp"
    android:id="@+id/toolbar">
</android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


<fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.naver.maps.map.MapFragment" />

    <android.support.v7.widget.CardView
        android:visibility="visible"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/main_battery_cardview"
        android:layout_width="250dp"
        app:cardBackgroundColor="#ccffffff"
        android:layout_height="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:id="@+id/main_battery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="남은 배터리: 98%"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/main_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="사용 시간: 1시간 13분"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/main_lend_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="반납하기"
                android:textColor="#000000"
                android:background="@drawable/rectangle_yellow"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ImageButton
        android:id="@+id/main_gps_imageButton"
        android:background="#00000000"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/gps"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />

    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/bmb"
        app:bmb_normalColor="#856400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bmb_buttonEnum="textInsideCircle"
        app:bmb_piecePlaceEnum="piecePlace_dot_7_4"
        app:bmb_buttonPlaceEnum="buttonPlace_sc_7_3"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        />

</FrameLayout>